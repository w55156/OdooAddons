    <!-- 一般参数 -->
    <!-- Search View -->
    <record model="ir.ui.view" id="view_xz_yibcs_search">
      <field name="name">xz_yibcs.search</field>
      <field name="model">xz.yibcs</field>
      <field name="type">search</field>
      <field name="arch" type="xml">
        <search string="xz_yibcs">
